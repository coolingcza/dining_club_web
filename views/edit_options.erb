    <h1>Edit Options</h1>
    
    <hr>
    <h3> CLUB NAME: <b><%= @club.name %></b> </h3>
    <hr>
    
    <h2>Available Actions:</h2>
    
    <br>
    
    <ul>
      <li>
        <form action="/display_club_info" method="get">
          <b>Change Club Name</b> 
          <br>
          Enter new name: <input type="text" name="newclubname">
          <input type="submit" value="Submit">
          <input type="hidden" name="clubid" value=<%= @club.id %>>
        </form>
      </li>
      <li>
        <form action="/display_club_info" method="get">
          <b>Change Member Name</b>
          <br>
          Current member name:
          <select name="oldmemname">
          <% @memberlist.each do |m| %>
            <option value= <%= m.name %> > <%= m.name %> </option>
          <% end %>
          </select>
          <br>
          New member name:   <input type="text" name="newmemname">
          <input type="submit" value="Submit">
          <input type="hidden" name="clubid" value=<%= @club.id %>>
        </form>
      </li>
      <li>
        <form action="/display_club_info" method="get">
          <b>Add Member</b>
          <br>
          Member name to add: <input type="text" name="addmemname">
          <input type="submit" value="Submit">
          <input type="hidden" name="clubid" value=<%= @club.id %>>
        </form>
      </li>
      <li>
        <form action="/display_club_info" method="get">
          <b>Remove Member</b>
          <br>
          Member name to remove:
          <select name="remmemname">
          <% @memberlist.each do |m| %>
            <option value= <%= m.name %> > <%= m.name %> </option>
          <% end %>
          </select>
          <input type="submit" value="Submit">
          <input type="hidden" name="clubid" value=<%= @club.id %>>
        </form>
      </li>
    </ul>
